{
   "id": "http://fenixapps.fao.org/repository/schema/mdsd-schema.json",
   "$schema": "http://json-schema.org/draft-04/schema#",
   "description": "D3S Objects Schema",
   "definitions": {
      "OJAxis": {
         "type": "object",
         "properties": {
            "axisName": {
               "$ref": "#/definitions/AxisType"
            },
            "axisSize": {
               "type": "number"
            },
            "resolution": {
               "$ref": "#/definitions/OJMeasure"
            }
         }
      },
      "OJMeasure": {
         "type": "object",
         "properties": {
            "extend": {
               "type": "object",
               "patternProperties": {
                  ".{1,}": {"type": "string"}
               }
            },
            "composedMU": {
               "type": "boolean"
            },
            "measurementSystem": {
               "type": "object",
               "patternProperties": {
                  ".{1,}": {"type": "string"}
               }
            },
            "nameMU": {
               "type": "string"
            },
            "conversionToStandard": {
               "type": "number"
            }
         }
      },
      "AxisType": {
         "enum": ["Row", "Column", "Vertical", "Time"]
      },
      "ResponsiblePartyRole": {
         "enum": ["Owner", "Distributor", "Other"]
      },
      "OjContact": {
         "type": "object",
         "properties": {
            "phone": {
               "type": "string"
            },
            "address": {
               "type": "string"
            },
            "emailAddress": {
               "type": "string"
            }
         },
         "hoursOfService": {
            "type": "object",
            "patternProperties": {
               ".{1,}": {"type": "string"}
            }
         },
         "contactInstruction": {
            "type": "object",
            "patternProperties": {
               ".{1,}": {"type": "string"}
            }
         }
      },
      "OjResponsibleParty": {
         "type": "object",
         "properties": {
            "pointOfContact": {
               "type": "string"
            },
            "organization": {
               "type": "object",
               "patternProperties": {
                  ".{1,}": {"type": "string"}
               }
            },
            "organizationUnit": {
               "type": "object",
               "patternProperties": {
                  ".{1,}": {"type": "string"}
               }
            },
            "position": {
               "type": "object",
               "patternProperties": {
                  ".{1,}": {"type": "string"}
               }
            },
            "role": {
               "$ref": "#/definitions/ResponsiblePartyRole"
            },
            "specify": {
               "type": "object",
               "patternProperties": {
                  ".{1,}": {"type": "string"}
               }
            },
            "role": {
               "$ref": "#/definitions/OjContact"
            }
         }
      },
      "DocumentType": {
         "enum": ["Scientific paper", "Methodological notes", "Legal document",
                  "Handbook", "Guidelines", "Ad hoc press",
                  "News", "Website", "Other"
         ]
      },
      "OjCitation": {
         "type": "object",
         "properties": {
            "documentKind": {
               "$ref": "#/definitions/DocumentType"
            },
            "title": {
               "type": "object",
               "patternProperties": {
                  ".{1,}": {"type": "string"}
               }
            },
            "date": {
               "type": "date-time"
            },
            "documentContact": {
               "$ref": "#/definitions/OjResponsibleParty"
            },
            "notes": {
               "type": "object",
               "patternProperties": {
                  ".{1,}": {"type": "string"}
               }
            },
            "link": {
               "type": "string"
            },
            "isbn": {
               "type": "string"
            },
            "issn": {
               "type": "string"
            }
         }
      },
      "OjCode": {
         "type": "object",
         "properties": {
            "code": {
               "type": "string"
            },
            "label": {
               "type": "object",
               "patternProperties": {
                  ".{1,}": {"type": "string"}
               }
            }
         }
      },
      "OjCodeList": {
         "type": "object",
         "properties": {
            "codes": {
               "type": "array",
               "items": {
                  "$ref": "#/definitions/OjCode"
               }
            },
            "idCodeList": {
               "type": "string"
            },
            "version": {
               "type": "string"
            },
            "extendedName": {
               "type": "object",
               "patternProperties": {
                  ".{1,}": {"type": "string"}
               }
            },
            "contactInfo": {
               "$ref": "#/definitions/OjResponsibleParty"
            },
            "codeListResources": {
               "type": "array",
               "items": {
                  "$ref": "#/definitions/OjCitation"
               }
            },
            "link": {
               "type": "string"
            }
         }
      },
      "OjPeriod": {
         "type": "object",
         "properties": {
            "from": {
               "type": "date-time"
            },
            "to": {
               "type": "date-time"
            }
         }
      }
   }
}