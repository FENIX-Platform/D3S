<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">

	<context-param>
	    <description>D3S database URL</description>
	    <param-name>D3S.baseURL</param-name>
	    <param-value>http://hqlprfenixapp2.hq.un.fao.org:7777</param-value>
	</context-param>

<!-- INIT Servlet -->
	<servlet>
		<servlet-name>init</servlet-name>
		<servlet-class>org.fao.fenix.server.init.MainController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>init</servlet-name>
		<url-pattern>/*</url-pattern>
	</servlet-mapping>


<!-- JSONP filter -->
	<filter>
        <filter-name>wrepoJSONP</filter-name>
        <filter-class>
            org.fao.ess.widget.filter.JSONPFilter
        </filter-class>
    </filter>
    <filter-mapping>
        <filter-name>wrepoJSONP</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
	
	
<!-- REST Configuration -->
    <context-param>
        <param-name>resteasy.servlet.mapping.prefix</param-name>
        <param-value>/service</param-value>
    </context-param>

	<filter>
        <filter-name>Resteasy</filter-name>
        <filter-class>org.jboss.resteasy.plugins.server.servlet.FilterDispatcher</filter-class>
        <init-param>
            <param-name>javax.ws.rs.Application</param-name>
            <param-value>org.fao.fenix.server.services.rest.ServiceRegistry</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>Resteasy</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

</web-app>
